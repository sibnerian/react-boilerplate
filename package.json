{
  "name": "flush-requires-boilerplate-webpack-chunknames",
  "description":
    "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "James Gillmore <james@faceyspacey.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && cross-env NODE_ENV=development node server/index.js",
    "start:prod": "npm run clean && cross-env NODE_ENV=production node server/index.js",
    "format": "prettier --write '{src,server,webpack}/**/*.js' && eslint --fix src server webpack",
    "clean": "rimraf buildClient buildServer",
    "precommit": "lint-staged",
    "cm": "git-cz"
  },
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-universal-import": "^1.2.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-watch": "^2.0.6",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.15.2",
    "express-no-favicons": "^0.0.1",
    "extract-css-chunks-webpack-plugin": "^2.0.17",
    "history": "^4.6.3",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "poststylus": "^1.0.0",
    "prettier": "^1.5.3",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.0.0",
    "react-router-prop-types": "^0.0.2",
    "react-universal-component": "^2.5.1",
    "rimraf": "^2.6.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "travis-github-status": "^1.4.0",
    "webpack": "^3.5.1",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-flush-chunks": "^1.1.23",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-hot-server-middleware": "^0.1.0",
    "write-file-webpack-plugin": "^4.1.0"
  },
  "devDependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": ["prettier --write", "eslint --fix", "git add"]
    }
  }
}
